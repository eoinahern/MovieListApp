<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/toolbarStyle</item>
        <item name="android:actionBarStyle">@style/toolbarStyle</item>
    </style>


    <style name="toolbarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/wineRed</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="subheadingStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
    </style>

</resources>
